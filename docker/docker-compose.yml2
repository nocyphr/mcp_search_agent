version: '3.9'

services:
  crawl4ai:
    image: unclecode/crawl4ai:latest
    container_name: crawl4ai-service
    volumes:
      - /dev/shm:/dev/shm
    deploy:
      resources:
        limits:
          memory: 4G
        reservations:
          memory: 1G
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "30s"]
      timeout: 10s
      retries: 3
      start_period: 40s
